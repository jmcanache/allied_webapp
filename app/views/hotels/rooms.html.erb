<div class="container page-wrap" style="padding-top: 1%">
	<%= form_tag({controller: "hotels", action: "update_rooms"}, {class: "form-horizontal col-sm-offset-3", id: "hotel_rooms"}) do %>
		<%= image_tag("logo.png", class: "col-sm-offset-1", size: "350x130", alt: "Logo") %>
		<div class="form-group">
		    <div class="col-sm-4">
		    	<%= label_tag :single, nil, class: "control-label" %>
		      	<%= number_field_tag :single, nil, class: "form-control", required: "required", placeholder: "Avaliable single rooms", value: @hotel[:single]%>
		    </div>

		    <div class="col-sm-4">
		    	<%= label_tag :double, nil, class: "control-label" %>
		      	<%= number_field_tag :double, nil, class: "form-control", required: "required", placeholder: "Avaliable double rooms", value: @hotel[:double]%>
		    </div>
	  	</div>
	  	<div class="form-group">
	    	<div class="col-sm-8">
	      		<%= submit_tag "Update rooms", class: "btn btn-primary pull-right" %>
	    	</div>
	  	</div>
	<% end %>
</div>