<!DOCTYPE html>
<html>
  <head>
    <title>Allied Hospitality</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

      <div class="container">
        <% if !params[:notice].blank? %>
          <div style="padding-top: 1%">
            <div class="alert alert-success fade in"> 
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <strong>Success!  <%= params[:notice]%></strong>
            </div>
          </div>
        <%end%>
        <% if !flash[:notice].blank? %>
          <div style="padding-top: 1%">
            <div class="alert alert-success fade in">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <strong><%= flash[:notice]%></strong>
            </div>
          </div>
        <%end%>

        <% if !params[:alert].blank? %>
          <div style="padding-top: 1%">
            <div class="alert alert-danger fade in">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <strong> Sorry!  <%= params[:alert] %> </strong>
           </div>
         </div>
        <%end%>
        <% if !flash[:alert].blank? %>
          <div style="padding-top: 1%">
            <div class="alert alert-danger fade in">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <strong> <%= flash[:alert] %> </strong>
           </div>
         </div>
        <%end%>

        <% if !params[:warning].blank? %>
          <div style="padding-top: 1%">
            <div class="alert alert-warning">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
               <strong>Warning!  <%= params[:warning] %></strong>          
            </div>
          </div>
        <%end%>
      </div>
    <%= yield %>

    <footer class="bg-dark type-2">
      <div class="container">
        <div class="row">
          
          <div class="footer-link bg-black">
            <div class="container">
              <div class="row">
                <div class="col-md-12">
                  <div class="copyright">
                    <span>&copy; 2016 All rights reserved. Allied Hospitality</span>
                  </div>
                  <ul>
                    <li><a href="#" class="link-aqua">Home </a></li>
                    <li><a href="#" class="link-aqua">Services</a></li>
                    <li><a href="#" class="link-aqua">About us </a></li>
                    <li><a href="#" class="link-aqua">Contact</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </footer>  

  </body>
</html>
